{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext", 
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": true,
    "esModuleInterop":true,
    "outDir": "dist",
    "allowJs": true,
    "lib": ["dom", "es6"],
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "*.ts",
    "src/**/*.d.ts",
    "tests/**/*.spec.ts"
  ],
  "files": [
    "app.js"
  ]
}